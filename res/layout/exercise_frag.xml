<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:text="@string/today"
        android:id="@+id/step_today"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    />
    <TextView 
        android:id="@+id/steps_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:layout_below="@id/step_today"
        android:layout_centerHorizontal="true"
    />
    <RelativeLayout 
        android:id="@+id/center_layout"
        android:layout_below="@id/steps_text"
        android:layout_centerHorizontal="true" 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <ImageView
            android:id="@+id/clock_img"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/clock"
        	android:scaleType="centerInside"
        	android:adjustViewBounds="true"
        	android:layout_centerVertical="true"
        />
        <TextView 
        	android:id="@+id/step_time"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="@color/yellow"
        	android:layout_toRightOf="@id/clock_img"
	     	android:layout_alignTop="@id/clock_img"
	     	android:layout_centerVertical="true"
	     	android:layout_marginLeft="5dp"
    	/>
        <ImageView
            android:id="@+id/fire_img"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/fire"
        	android:layout_toRightOf="@id/step_time"
	     	android:layout_alignTop="@id/step_time"
        	android:scaleType="centerInside"
        	android:adjustViewBounds="true"
        	android:layout_centerVertical="true"
        	android:layout_marginLeft="10dp"
        />
	    <TextView 
	        android:id="@+id/step_cal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	     	android:textColor="@color/yellow"
	     	android:layout_marginLeft="5dp"
	     	android:layout_toRightOf="@id/fire_img"
	     	android:layout_alignTop="@id/fire_img"
 			android:layout_centerVertical="true"
	   	/>
        
    </RelativeLayout>
    
 	<TextView 
 	    android:layout_marginTop="30dp"
        android:id="@+id/step_encourage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:layout_below="@id/center_layout"
        android:layout_centerHorizontal="true"
    />
    <ImageButton 
        android:id="@+id/step_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@drawable/exer_config"
    />
</RelativeLayout>
